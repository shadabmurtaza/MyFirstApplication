<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:visibility="visible"
    tools:context=".MainActivity"
    tools:ignore="ExtraText">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/shadab">

    </de.hdodenhof.circleimageview.CircleImageView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Shadab Murtaza"
        android:textAlignment="center"
        android:layout_margin="5dp"
        android:textSize="20sp"
        android:textColor="@color/black"
        >

    </TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" I'm a person who loves to code, develop apps and read books.."
        android:textColor="@color/teal_700"
        android:textSize="25sp"
        android:layout_marginTop="15dp"
        android:layout_margin="20sp">

    </TextView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SKILLS"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:textSize="20dp"
        android:layout_marginTop="15dp">

    </TextView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Java | Kotlin | C++ | AndroidDeveloper"
        android:textColor="@color/teal_200"
        android:textAlignment="center"
        android:textSize="20dp"
        android:layout_marginTop="15dp">

    </TextView>
    <LinearLayout
        android:layout_width="375dp"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:visibility="visible"
        android:layout_marginTop="20sp">

        <ImageView
            android:id="@+id/lindkedin"
            android:layout_width="75dp"
            android:layout_height="match_parent"
            android:src="@drawable/facebook">

        </ImageView>

        <ImageView
            android:id="@+id/github"
            android:onClick="github"
            android:layout_width="75dp"
            android:layout_height="match_parent"
            android:src="@drawable/github">

        </ImageView>
        <ImageView
            android:layout_width="75dp"
            android:layout_height="match_parent"
            android:src="@drawable/discord">

        </ImageView>
        <ImageView
            android:id="@id/lindkedin"
            android:layout_width="75dp"
            android:layout_height="match_parent"
            android:src="@drawable/linkedin1"
            android:onClick="linkedin">

        </ImageView>
        <ImageView
            android:layout_width="75dp"
            android:layout_height="match_parent"
            android:src="@drawable/leetcode">

        </ImageView>



    </LinearLayout>
    <LinearLayout
        android:layout_width="375dp"
        android:layout_height="75dp"
        android:orientation="horizontal"
        android:visibility="visible">

        <ImageView
            android:layout_width="75dp"
            android:layout_height="match_parent"
            android:src="@drawable/gmail">

        </ImageView>

        <ImageView
            android:layout_width="75dp"
            android:layout_height="match_parent"
            android:src="@drawable/share"
            android:onClick="shareMyProfile">

        </ImageView>
        <ImageView
            android:layout_width="75dp"
            android:layout_height="match_parent"
            android:src="@drawable/snapchat">

        </ImageView>
        <ImageView
            android:id="@+id/insta"
            android:onClick="insta"
            android:layout_width="75dp"
            android:layout_height="match_parent"
            android:src="@drawable/instagram"
            tools:ignore="OnClick,UsingOnClickInXml">

        </ImageView>
        <ImageView
            android:layout_width="75dp"
            android:layout_height="match_parent"
            android:src="@drawable/twitter">

        </ImageView>


    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="switch"
        android:onClick="switch"
        android:layout_margin="10dp"
        tools:ignore="OnClick">

    </Button>

</LinearLayout>

